<script>
// Continuous Confetti
const canvas=document.getElementById("confetti");
const ctx=canvas.getContext("2d");
canvas.width=innerWidth;
canvas.height=innerHeight;
let confetti=[];
function createConfetti(count){
for(let i=0;i<count;i++){
confetti.push({
x:Math.random()*canvas.width,
y:Math.random()*canvas.height,
r:Math.random()*6+2,
d:Math.random()*5+2,
c:`hsl(${Math.random()*360},100%,60%)`
})
}}
createConfetti(150);

function draw(){
ctx.clearRect(0,0,canvas.width,canvas.height);
confetti.forEach(p=>{
ctx.beginPath();
ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
ctx.fillStyle=p.c;
ctx.fill();
p.y+=p.d;
if(p.y>canvas.height)p.y=-10;
});
requestAnimationFrame(draw);
}
draw();

// Puzzles
function checkRiddle(){
riddleResult.innerText=
riddle.value.toLowerCase().includes("birthday")?"ğŸ‰ Correct!":"âŒ Try again!";
}
function checkMath(){
mathResult.innerText=
math.value==40?"ğŸ‚ Correct!":"âŒ Try again!";
}
function checkEmoji(){
emojiResult.innerText=
emoji.value.toLowerCase().includes("birthday")?"ğŸ’– Correct!":"âŒ Think again!";
}
function checkMemory(){
memoryResult.innerText=
memory.value.length>2?"ğŸˆ Nice!":"âŒ Try!";
}

// Gallery + Unlock
function openLightbox(img){
lightbox.style.display="flex";
lightboxImg.src=img.src;
caption.innerText=img.alt;
img.dataset.viewed="true";
checkViewed();
}
function closeLightbox(){
lightbox.style.display="none";
}
function checkViewed(){
const imgs=document.querySelectorAll(".gallery img");
if([...imgs].every(i=>i.dataset.viewed==="true")){
secretMessage.classList.remove("hidden");
createConfetti(120); // burst on unlock
}
}
</script>

